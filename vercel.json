{
    "version": 2,
    "builds": [
        {
            "src": "server/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/public/**/*",
                    "dist/public/index.html",
                    "shared/**/*"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "server/index.ts"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}