{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "functions": {
        "api/*.ts": {
            "runtime": "@vercel/node@latest"
        }
    },
    "rewrites": [
        {
            "source": "/api/products/:path*",
            "destination": "/api/products"
        },
        {
            "source": "/api/health",
            "destination": "/api/health"
        },
        {
            "source": "/((?!api|assets|_next).*)",
            "destination": "/index.html"
        }
    ]
}